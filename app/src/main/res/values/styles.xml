<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% để thành hình tròn -->
    </style>

    <style name="MyTextInputOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/grey400</item>
        <item name="hintTextColor">@color/grey400</item>
        <item name="android:textColorHint">@color/grey400</item>
        <item name="android:textColor">@color/grey400</item>
    </style>

    <style name="textHint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="textHintGray61">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey600</item>
        <item name="android:textColorHint">@color/grey600</item>
    </style>
    <style name="textTitleWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CodeEditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_text_rounded_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>